@page
@model FileSharingAppModel
@{
    // This is what will display on the browser tab:
    ViewData["Title"] = "File Sharing App";
}

<div class="text-center">
    <h1 class="display-4">File Sharing App</h1>
    <p>Upload a file and send it to an email address.</p>

<!DOCTYPE html>
<html>
<head>
    <title>Two Input Boxes</title>

    <style>
        label {
            display: inline-block;
            width: 120px; /* Adjust as needed */
            text-align: right;
            margin-right: 10px;
        }

        input[type="file"], input[type="email"] {
            width: 200px; /* Adjust as needed */
        }
    </style>

</head>
<body>
    <form method="post" enctype="multipart/form-data" id="fileUpload">
        <label for="fileUpload">Upload File:</label>
        <input type="file" class="form-control-file" id="file" name="file">
        <br><br>
        <label for="email">Send To:</label>
        <input type="email" id="email" name="email" placeholder="Enter Email to Send File To">
        <br><br>
        <input type="submit" value="Submit">
    </form>

